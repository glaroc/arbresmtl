<?php
function cl(){
include("/var/www/quebio.ca/misc/dbaminfo.php");
$connection=mysql_connect ('localhost', $mys_username, $mys_pass);
if (!$connection) {
  die('Not connected : ' . mysql_error());
}
// Set the active MySQL database
$db_selected = mysql_select_db($mys_base, $connection);
if (!$db_selected) {
  die ('Can\'t use db : ' . mysql_error());
}
$query = "SELECT DISTINCT essence_francais FROM trees ORDER BY essence_francais ASC";
mysql_query("set names 'utf8'");
$result = mysql_query($query);
if (!$result) {
  die('Invalid query: ' . mysql_error());
}

while ($row = @mysql_fetch_assoc($result)){
  echo '<option value="' . $row['essence_francais'] . '">' . $row['essence_francais'] . '</option>';
}
}
?>
